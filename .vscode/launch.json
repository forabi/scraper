{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Scraper",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--nolazy", "-r", "ts-node/register"
        ],
        "args": [
          "src/programs/scrape.ts",
          "-p", "'tom-*.html'",
          "-r", "output/html",
          "-o", "output/scraperResults",
          "--force",
          "--dry"
        ],
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "protocol": "inspector"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Downloader",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--nolazy", "-r", "ts-node/register"
        ],
        "args": [
          "src/programs/download.ts",
          "-p", "dump/postNames.json",
          "-o", "output/html",
          "--force",
          "--dry"
        ],
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "protocol": "inspector"
      }
    ]
  }