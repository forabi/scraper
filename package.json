{
  "name": "scraper",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:hollowverse/scraper.git",
  "author": "Muhammad Fawwaz Orabi <mfawwaz93@gmail.com>",
  "license": "Unlicense",
  "scripts": {
    "lint": "run-p validate-filenames lint-js lint-ts",
    "pretest": "yarn lint",
    "test": "jest",
    "check-ts": "tsc --project ./src --noEmit",
    "lint-js": "eslint '**/*.js'",
    "lint-ts": "tslint './*.ts' 'src/**/*.ts' --project tsconfig.json",
    "dev": "node --inspect=0.0.0.0:${SCRAPER_DEBUG_PORT:-9230} -r 'ts-node/register' src/index.ts",
    "dev:watch": "nodemon --watch ./src --ext ts --exec yarn dev",
    "build": "tsc --project ./src",
    "clean": "rm -rf ./dist",
    "validate-filenames": "validate-filenames --config commonconfig.js",
    "lint-staged": "lint-staged"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "lint-staged": {
    "**/*.ts{x,}": [
      "tslint -p ./tsconfig.json"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "pre-commit": [
    "validate-filenames",
    "lint-staged"
  ],
  "dependencies": {
    "bluebird": "^3.5.1",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.11.0",
    "date-fns": "^1.29.0",
    "got": "^7.1.0",
    "lodash": "^4.17.4",
    "progress": "^2.0.0"
  },
  "devDependencies": {
    "@hollowverse/common": "hollowverse/common",
    "@hollowverse/validate-filenames": "^1.3.3",
    "@types/bluebird": "^3.5.18",
    "@types/cheerio": "^0.22.5",
    "@types/commander": "^2.11.0",
    "@types/got": "^7.1.4",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.82",
    "@types/node": "^8.0.48",
    "@types/progress": "^2.0.0",
    "babel-eslint": "^8.0.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1"
  },
  "lib": {
    "hv-download": "dist/programs/download.js",
    "hv-status": "dist/programs/status.js",
    "hv-scrape": "dist/programs/scrape.js"
  }
}
